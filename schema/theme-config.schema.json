{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Theme Config for @bruhabruh/theme",
  "type": "object",
  "properties": {
    "dependencies": {
      "default": [],
      "description": "List of themes dependencies.\nDefault: []",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "selectors": {
      "default": [],
      "description": "List of CSS selectors.\nDefault: []",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "color": {
      "default": {
        "base": [],
        "material": {
          "source": "#ffffff",
          "disable": {
            "neutral": false,
            "neutral-variant": false,
            "primary": false,
            "secondary": false,
            "tertiary": false,
            "error": false
          },
          "overrides": {
            "neutral": "neutral",
            "neutral-variant": "neutral-variant",
            "primary": "primary",
            "secondary": "secondary",
            "tertiary": "tertiary",
            "error": "critical"
          },
          "customColors": []
        },
        "generator": []
      },
      "description": "Color tokens.\nDefault: {}",
      "type": "object",
      "properties": {
        "base": {
          "default": [],
          "description": "List of color records",
          "type": "array",
          "items": {
            "description": "Color record. Name to value",
            "type": "object",
            "propertyNames": {
              "type": "string"
            },
            "additionalProperties": {
              "description": "Color value or Color modifiers record",
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object",
                  "propertyNames": {
                    "type": "string"
                  },
                  "additionalProperties": {
                    "description": "Color value",
                    "type": "string"
                  }
                }
              ]
            }
          }
        },
        "material": {
          "default": null,
          "description": "Material color generator options.\nDefault: null",
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "source": {
                  "description": "Source color value.\nRequired",
                  "type": "string"
                },
                "disable": {
                  "default": {
                    "neutral": false,
                    "neutral-variant": false,
                    "primary": false,
                    "secondary": false,
                    "tertiary": false,
                    "error": false
                  },
                  "type": "object",
                  "properties": {
                    "neutral": {
                      "default": false,
                      "type": "boolean"
                    },
                    "neutral-variant": {
                      "default": false,
                      "type": "boolean"
                    },
                    "primary": {
                      "default": false,
                      "type": "boolean"
                    },
                    "secondary": {
                      "default": false,
                      "type": "boolean"
                    },
                    "tertiary": {
                      "default": false,
                      "type": "boolean"
                    },
                    "error": {
                      "default": false,
                      "type": "boolean"
                    }
                  },
                  "required": [
                    "neutral",
                    "neutral-variant",
                    "primary",
                    "secondary",
                    "tertiary",
                    "error"
                  ],
                  "additionalProperties": false
                },
                "overrides": {
                  "default": {
                    "neutral": "neutral",
                    "neutral-variant": "neutral-variant",
                    "primary": "primary",
                    "secondary": "secondary",
                    "tertiary": "tertiary",
                    "error": "critical"
                  },
                  "description": "Material color names overrides",
                  "type": "object",
                  "properties": {
                    "neutral": {
                      "default": "neutral",
                      "type": "string"
                    },
                    "neutral-variant": {
                      "default": "neutral-variant",
                      "type": "string"
                    },
                    "primary": {
                      "default": "primary",
                      "type": "string"
                    },
                    "secondary": {
                      "default": "secondary",
                      "type": "string"
                    },
                    "tertiary": {
                      "default": "tertiary",
                      "type": "string"
                    },
                    "error": {
                      "default": "critical",
                      "type": "string"
                    }
                  },
                  "required": [
                    "neutral",
                    "neutral-variant",
                    "primary",
                    "secondary",
                    "tertiary",
                    "error"
                  ],
                  "additionalProperties": false
                },
                "customColors": {
                  "description": "Custom colors settings.\nDefault: []",
                  "default": [],
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "description": "Color name",
                        "type": "string"
                      },
                      "value": {
                        "description": "Color value",
                        "type": "string"
                      },
                      "blend": {
                        "description": "Color blend.\nDefault: false",
                        "default": false,
                        "type": "boolean"
                      }
                    },
                    "required": ["name", "value", "blend"],
                    "additionalProperties": false
                  }
                }
              },
              "required": ["source", "disable", "overrides", "customColors"],
              "additionalProperties": false
            },
            {
              "type": "null"
            }
          ]
        },
        "generator": {
          "default": [],
          "description": "List of color tokens generators",
          "type": "array",
          "items": {
            "description": "Color generators by name.\nDefault: {}",
            "default": {},
            "type": "object",
            "propertyNames": {
              "type": "string"
            },
            "additionalProperties": {
              "description": "Color generator settings.\nRequired",
              "type": "object",
              "properties": {
                "base": {
                  "description": "Base color value.\nRequired",
                  "type": "string"
                },
                "modifier": {
                  "default": {
                    "min": 50,
                    "max": 1000,
                    "step": 50,
                    "reverse": false
                  },
                  "description": "Modifier generator settings.\nOptional",
                  "type": "object",
                  "properties": {
                    "min": {
                      "description": "Minimal token modifier.\nDefault: 50",
                      "default": 50,
                      "type": "number"
                    },
                    "max": {
                      "description": "Maximum token modifier.\nDefault: 1000",
                      "default": 1000,
                      "type": "number"
                    },
                    "step": {
                      "description": "Step for token modifier.\nDefault: 50",
                      "default": 50,
                      "type": "number"
                    },
                    "reverse": {
                      "description": "Reverse colors.\nDefault: false",
                      "default": false,
                      "type": "boolean"
                    }
                  },
                  "required": ["min", "max", "step", "reverse"],
                  "additionalProperties": false
                }
              },
              "required": ["base", "modifier"],
              "additionalProperties": false
            }
          }
        }
      },
      "required": ["base", "material", "generator"],
      "additionalProperties": false
    },
    "radius": {
      "default": [],
      "description": "List of Border Radius tokens.\nDefault: []",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "description": "Border Radius token record name to value.\nRequired",
            "type": "object",
            "propertyNames": {
              "type": "string"
            },
            "additionalProperties": {
              "description": "Border Radius value or reference like {radius.base}.\nSupport calculation like {radius.base} + 2px",
              "type": "string"
            }
          },
          {
            "description": "Border Radius token generator.\nRequired",
            "type": "object",
            "properties": {
              "_generator": {
                "description": "Border Radius generator settings.\nRequired",
                "type": "object",
                "properties": {
                  "start": {
                    "description": "Start number.\nRequired",
                    "type": "number"
                  },
                  "end": {
                    "description": "End number.\nRequired",
                    "type": "number"
                  },
                  "namePattern": {
                    "default": "{i}",
                    "description": "Name pattern.\nDefault: \"{i}\"",
                    "type": "string"
                  },
                  "valuePattern": {
                    "default": "{i}px",
                    "description": "Value pattern.\nDefault: \"{i}px\"",
                    "type": "string"
                  },
                  "step": {
                    "default": 1,
                    "description": "Step.\nDefault: 1",
                    "type": "number"
                  }
                },
                "required": [
                  "start",
                  "end",
                  "namePattern",
                  "valuePattern",
                  "step"
                ],
                "additionalProperties": false
              }
            },
            "required": ["_generator"],
            "additionalProperties": false
          }
        ]
      }
    },
    "spacing": {
      "default": [],
      "description": "List of Spacing tokens.\nDefault: []",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "description": "Spacing token record name to value.\nRequired",
            "type": "object",
            "propertyNames": {
              "type": "string"
            },
            "additionalProperties": {
              "description": "Spacing value or reference like {spacing.base}.\nSupport calculation like {spacing.base} + 2px",
              "type": "string"
            }
          },
          {
            "description": "Spacing token generator.\nRequired",
            "type": "object",
            "properties": {
              "_generator": {
                "description": "Spacing token generator.\nRequired",
                "type": "object",
                "properties": {
                  "start": {
                    "description": "Start number.\nRequired",
                    "type": "number"
                  },
                  "end": {
                    "description": "End number.\nRequired",
                    "type": "number"
                  },
                  "namePattern": {
                    "default": "{i}",
                    "description": "Name pattern.\nDefault: \"{i}\"",
                    "type": "string"
                  },
                  "valuePattern": {
                    "default": "{i}px",
                    "description": "Value pattern.\nDefault: \"{i}px\"",
                    "type": "string"
                  },
                  "step": {
                    "default": 1,
                    "description": "Step.\nDefault: 1",
                    "type": "number"
                  }
                },
                "required": [
                  "start",
                  "end",
                  "namePattern",
                  "valuePattern",
                  "step"
                ],
                "additionalProperties": false
              }
            },
            "required": ["_generator"],
            "additionalProperties": false
          }
        ]
      }
    },
    "font": {
      "default": [],
      "description": "List of Font Family tokens.\nDefault: []",
      "type": "array",
      "items": {
        "description": "Font Family token record name to value.\nRequired",
        "type": "object",
        "propertyNames": {
          "type": "string"
        },
        "additionalProperties": {
          "description": "Font Family value or reference like {font.base}",
          "type": "string"
        }
      }
    },
    "fontWeight": {
      "default": [],
      "description": "List of Font Weight tokens.\nDefault: []",
      "type": "array",
      "items": {
        "description": "Font Weight token record name to value.\nRequired",
        "type": "object",
        "propertyNames": {
          "type": "string"
        },
        "additionalProperties": {
          "description": "Font Weight value or reference like {font-weight.base}",
          "type": "string"
        }
      }
    },
    "leading": {
      "default": [],
      "description": "List of Line Height tokens.\nDefault: []",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "description": "Line Height token record name to value.\nRequired",
            "type": "object",
            "propertyNames": {
              "type": "string"
            },
            "additionalProperties": {
              "description": "Line Height value or reference like {leading.base}",
              "type": "string"
            }
          },
          {
            "description": "Line Height token generator.\nRequired",
            "type": "object",
            "properties": {
              "_generator": {
                "description": "Line Height token generator.\nRequired",
                "type": "object",
                "properties": {
                  "start": {
                    "description": "Start number.\nRequired",
                    "type": "number"
                  },
                  "end": {
                    "description": "End number.\nRequired",
                    "type": "number"
                  },
                  "namePattern": {
                    "default": "{i}",
                    "description": "Name pattern.\nDefault: \"{i}\"",
                    "type": "string"
                  },
                  "valuePattern": {
                    "default": "{i}px",
                    "description": "Value pattern.\nDefault: \"{i}\"",
                    "type": "string"
                  },
                  "step": {
                    "default": 1,
                    "description": "Step.\nDefault: 1",
                    "type": "number"
                  }
                },
                "required": [
                  "start",
                  "end",
                  "namePattern",
                  "valuePattern",
                  "step"
                ],
                "additionalProperties": false
              }
            },
            "required": ["_generator"],
            "additionalProperties": false
          }
        ]
      }
    },
    "text": {
      "default": [],
      "description": "List of Font Size tokens.\nDefault: []",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "description": "Font Size token record name to value.\nRequired",
            "type": "object",
            "propertyNames": {
              "type": "string"
            },
            "additionalProperties": {
              "description": "Font Size value or reference like {text.base}",
              "type": "string"
            }
          },
          {
            "description": "Font Size token generator.\nRequired",
            "type": "object",
            "properties": {
              "_generator": {
                "description": "Font Size token generator.\nRequired",
                "type": "object",
                "properties": {
                  "start": {
                    "description": "Start number.\nRequired",
                    "type": "number"
                  },
                  "end": {
                    "description": "End number.\nRequired",
                    "type": "number"
                  },
                  "namePattern": {
                    "default": "{i}",
                    "description": "Name pattern.\nDefault: \"{i}\"",
                    "type": "string"
                  },
                  "valuePattern": {
                    "default": "{i}px",
                    "description": "Value pattern.\nDefault: \"{i}\"",
                    "type": "string"
                  },
                  "step": {
                    "default": 1,
                    "description": "Step.\nDefault: 1",
                    "type": "number"
                  }
                },
                "required": [
                  "start",
                  "end",
                  "namePattern",
                  "valuePattern",
                  "step"
                ],
                "additionalProperties": false
              }
            },
            "required": ["_generator"],
            "additionalProperties": false
          }
        ]
      }
    },
    "tracking": {
      "default": [],
      "description": "List of Letter Spacing tokens.\nDefault: []",
      "type": "array",
      "items": {
        "description": "Letter Spacing token record name to value.\nRequired",
        "type": "object",
        "propertyNames": {
          "type": "string"
        },
        "additionalProperties": {
          "description": "Letter Spacing value or reference like {tracking.base}",
          "type": "string"
        }
      }
    },
    "typography": {
      "default": [],
      "description": "List of Typography tokens.\nDefault: []",
      "type": "array",
      "items": {
        "description": "Typography token record name to settings.\nRequired",
        "type": "object",
        "propertyNames": {
          "type": "string"
        },
        "additionalProperties": {
          "description": "Typography token settings.\nRequired",
          "type": "object",
          "properties": {
            "font": {
              "anyOf": [
                {
                  "description": "Font Family value or reference like {font.base}.\nOptional",
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "fontWeight": {
              "anyOf": [
                {
                  "description": "Font Weight value or reference like {font-weight.base}.\nOptional",
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "leading": {
              "anyOf": [
                {
                  "description": "Line Height value or reference like {leading.base}.\nOptional",
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "text": {
              "anyOf": [
                {
                  "description": "Font Size value or reference like {text.base}.\nOptional",
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "tracking": {
              "anyOf": [
                {
                  "description": "Letter Spacing value or reference like {tracking.base}.\nOptional",
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            }
          },
          "additionalProperties": false
        }
      }
    }
  },
  "required": [
    "dependencies",
    "selectors",
    "color",
    "radius",
    "spacing",
    "font",
    "fontWeight",
    "leading",
    "text",
    "tracking",
    "typography"
  ],
  "additionalProperties": false
}
