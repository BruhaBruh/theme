{
  "$ref": "#/definitions/config",
  "definitions": {
    "config": {
      "type": "object",
      "properties": {
        "prefix": {
          "type": "string",
          "description": "Prefix in css variables.\nDefault: \"\"",
          "default": ""
        },
        "content": {
          "type": "string",
          "description": "Path to theme configs.\nDefault: \"./themes/*.theme.yaml\"",
          "default": "./themes/*.theme.yaml"
        },
        "absolute": {
          "type": "boolean",
          "description": "Output w/ absolute values.\nDefault: false",
          "default": false
        },
        "output": {
          "type": "object",
          "properties": {
            "all": {
              "type": "object",
              "properties": {
                "css": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "destination": {
                        "type": ["string", "null"],
                        "description": "CSS output path of theme.\nOptional"
                      },
                      "absolute": {
                        "type": ["boolean", "null"],
                        "description": "CSS output w/ absolute values.\nOptional"
                      }
                    },
                    "additionalProperties": false,
                    "description": "CSS output options.\nDefault: {}",
                    "default": {}
                  },
                  "description": "CSS output options.\nDefault: []",
                  "default": []
                },
                "tailwind": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "destination": {
                        "type": ["string", "null"],
                        "description": "TailwindCSS output path of theme.\nOptional"
                      },
                      "absolute": {
                        "type": ["boolean", "null"],
                        "description": "TailwindCSS output w/ absolute values.\nOptional"
                      }
                    },
                    "additionalProperties": false,
                    "description": "TailwindCSS output options.\nDefault: {}",
                    "default": {}
                  },
                  "description": "TailwindCSS JSON output options.\nDefault: []",
                  "default": []
                }
              },
              "additionalProperties": false,
              "description": "Output for combined all themes.\nDefault: {}",
              "default": {}
            },
            "themes": {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/definitions/config/properties/output/properties/all"
              },
              "default": {}
            }
          },
          "additionalProperties": false,
          "description": "Output configuration.\nDefault: { all: {}, themes: {} }",
          "default": {}
        }
      },
      "additionalProperties": false,
      "description": "Main Config for @bruhabruh/theme"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
